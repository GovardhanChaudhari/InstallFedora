              if [ "$(check_extension_is_enabled "dash-to-dock@micxgx.gmail.com")" = true ]
              then
                gnome-shell-extension-tool -d "dash-to-dock@micxgx.gmail.com"
                echo "*** Dash to Dock disabled! ***"
              else
                download_extension https://extensions.gnome.org/extension-data/dash-to-panel@jderose9.github.com.v16.shell-extension.zip
              fi
              sleep 10.0
              ;;
          7_extensions)
            #Dash to Dock
              echo "***********************************************"
              echo "* Installing Dash to Dock extension (wget)... *"
              echo "***********************************************"
              #add some logic to check for Dash to Panel
              if [ "$(check_extension_is_enabled "dash-to-panel@jderose9.github.com")" = true ]
              then
                gnome-shell-extension-tool -d "dash-to-panel@jderose9.github.com"
                echo "*** Dash to Panel disabled! ***"
              else
                download_extension https://extensions.gnome.org/extension-data/dash-to-dock@micxgx.gmail.com.v64.shell-extension.zip
                gsettings set org.gnome.shell.extensions.dash-to-dock dock-position 'BOTTOM'
                gsettings set org.gnome.shell.extensions.dash-to-dock show-apps-at-top true
                gsettings set org.gnome.shell.extensions.dash-to-dock custom-theme-shrink true
                gsettings set org.gnome.shell.extensions.dash-to-dock transparency-mode 'ADAPTIVE'
              fi
              sleep 10.0
              ;;
          8_extensions)
            #Coverflow Alt-Tab
              echo "******************************************"
              echo "* Installing Coverflow Alt-Tab (wget)... *"
              echo "******************************************"
              download_extension https://extensions.gnome.org/extension-data/CoverflowAltTab@palatis.blogspot.com.v36.shell-extension.zip
              sleep 10.0
              ;;
          9_extensions)
            #Removable Drive Menu
              echo "**************************************"
              echo "* Installing Removable Drive Menu... *"
              echo "**************************************"
              download_extension https://extensions.gnome.org/extension-data/drive-menu@gnome-shell-extensions.gcampax.github.com.v38.shell-extension.zip
              sleep 10.0
              ;;
					10_extensions)
						#GSConnect
							echo "***************************"
							echo "* Installing GSConnect... *"
							echo "***************************"
							download_extension https://extensions.gnome.org/extension-data/gsconnect@andyholmes.github.io.v15.shell-extension.zip
							sleep 10.0
							;;

        # Section K ----------game----------
          1_gaming)
            #Steam
              echo "*********************************"
              echo "* Installing Steam (Flatpak)... *"
              echo "*********************************"
              sudo flatpak -y install flathub com.valvesoftware.Steam
              sleep 10.0
              ;;
          2_gaming)
            #Lutris
              echo "************************"
              echo "* Installing Lutris... *"
              echo "************************"
              sudo dnf config-manager --add-repo https://download.opensuse.org/repositories/home:strycore/Fedora_28/home:strycore.repo
              sudo dnf -y update
              sudo dnf -y install lutris
              sleep 10.0
              ;;
          3_gaming)
            #Mesa Stable
              echo "***********************************"
              echo "* Install Mesa - Stable (copr)... *"
              echo "***********************************"
              sudo dnf -y copr enable jerbear64/mesa_dxvk
              sudo dnf -y update --best --allowerasing
              sleep 10.0
            esac
          done
sleep 10.0
clear
echo "*******************************************************************"
echo "* Please restart your system for the updates to take full effect! *"
echo "*******************************************************************"
#restart_shell
